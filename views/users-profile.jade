extends layout

block content
    .col-xs-12
        div(align='right')
            a.btn.btn-lg.btn-success(href='/users/#{userData.username}/edit', role='button') Edit User
            | &nbsp;
            a.btn.btn-lg.btn-warning(role='button', data-toggle='modal', data-target='##{userData.username}') Delete User
    .modal.fade(id="#{userData.username}")
        form(action='/users/#{userData.username}/delete', method='post')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Cancel')
                            span(aria-hidden='true') &times;
                        h4.modal-title Delete User
                    .modal-body
                        p
                            span.text-danger
                                | #{userData.username}
                            span
                                | &nbsp;will be deleted. This action cannot be undone. Are you sure you want to delete this user?
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                        button.btn.btn-danger(name='submit', type='submit',) Yes, Delete It!
    .col-xs-12
        .row
            .col-md-3
                .row
                    .col-md-12
                        .thumbnail.no-margin-bottom
                            if userData.profileImage
                                a.thumbnail(href='/users/#{userData.username}')
                                    img.img-responsive(src='#{userData.profileImage}')
                            .caption
                                h3#thumbnail-label
                                    | &#64;#{userData.username}
                                    a.anchorjs-link(href='#thumbnail-label')
                                        span.anchorjs-icon
            .col-md-6
                .row
                    .col-md-12
                        .card
                            .card-header
                                .card-title
                                    .title About
                            .card-body
                                if userData.firstName
                                    .sub-title
                                        | First Name
                                    p= userData.firstName
                                if userData.lastName
                                    .sub-title
                                        | Last Name
                                    p= userData.lastName
                                if userData.email
                                    .sub-title
                                        | Email
                                    p= userData.email
                                if userData.website
                                    .sub-title
                                        | Website
                                    p
                                        a(href = '#{userData.website}', target = '_blank')
                                            | #{userData.website}
            .col-md-3
                .row
                    .col-md-12
                        .card
                            .card-header
                                .card-title
                                    .sub-title Publish
                            .card-body
                                div
                                    ul.list-group
                                        li.list-group-item
                                            strong
                                                | Created: &nbsp;
                                            | #{moment(userData.createdAt).format("YYYY-MM-DD HH:mm")}
                                        li.list-group-item
                                            strong
                                                | Last Updated: &nbsp;
                                            | #{moment(userData.updatedAt).format("YYYY-MM-DD HH:mm")}